from fechahora import FechaHora

def bisiesto(anio):
    if anio % 4 == 0:
        if anio % 100 == 0:
            if anio % 400 == 0:
                return True
            else:
                return False
        else:
            return True
    else:
        return False


def validar(d, mes, a, h, m, s):

    if s in range(60):
        if m in range(60):
            if h in range(24):
                if a in range(3000):
                    if mes in range(1, 13):
                        if (mes == 4) or (mes == 6) or (mes == 9) or (mes == 11):
                            if d in range(1, 31):
                                return True
                            else:
                                return False
                        else:
                            if mes == 2:
                                if (d in range(1, 29)) or (bisiesto(a) and d == 29):
                                    return True
                                else:
                                    return False
                            else:
                                if d in range(1, 32):
                                    return True
                                else:
                                    return False
                    else:
                        return False
                else:
                    return False
            else:
                return False
        else:
            return False
    else:
        return False


def validarhora(h, m, s):
    if h in range(24):
        if m in range(60):
            if s in range(60):
                return True
            else:
                return False
        else:
            return False
    else:
        return False


def opcion0():
    print("Finalizado")


def opcion1():
    d = int(input("Ingrese Dia: "))
    mes = int(input("Ingrese Mes: "))
    a = int(input("Ingrese AÃ±o: "))
    h = int(input("Ingrese Hora: "))
    m = int(input("Ingrese Minutos: "))
    s = int(input("Ingrese Segundos: "))
    if validar(d, mes, a, h, m, s):
        r.PonerEnFecha(d, mes, a)
        r.PonerEnHora(h, m, s)
    else:
        print("Datos no validos")


def opcion2():
    hora = input("Ingrese hora:")
    minutos = input("Ingrese minutos:")
    segundos = input("Ingrese segundos")
    if validarhora(int(hora), int(minutos), int(segundos)):
        sumar = str(hora) + ":" + str(minutos) + ":" + str(segundos)
        sumado = r + sumar
        print(sumado)
        r.Mostrar()
    else:
        print("Datos no validos")


def opcion3():
    hora = input("Ingrese hora:")
    minutos = input("Ingrese minutos:")
    segundos = input("Ingrese segundos")
    if validarhora(int(hora), int(minutos), int(segundos)):
        restar = str(hora) + ":" + str(minutos) + ":" + str(segundos)
        resta = r - restar
        print(resta)
        r.Mostrar()
    else:
        print("Datos no validos")


def opcion4():
    hora = input("Ingrese hora:")
    minutos = input("Ingrese minutos:")
    segundos = input("Ingrese segundos")
    if validarhora(int(hora), int(minutos), int(segundos)):
        mayor = str(hora) + ":" + str(minutos) + ":" + str(segundos)
        if r > mayor:
            print("Hora ingresada es menor")
        else:
            print("Hora ingresada es mayor")
    else:
        print("Datos no validos")


switcher = {
    0: opcion0,
    1: opcion1,
    2: opcion2,
    3: opcion3,
    4: opcion4,
}


def switch(argumento):
    func = switcher.get(argumento, lambda: print("Opcion incorrecta"))
    func()


if __name__ == '__main__':
    r = FechaHora()

    bandera = False
    while not bandera:
        print("")
        print("0: Salir")
        print("1: Establecer fecha y hora")
        print("2: Sumar hora")
        print("3: Restar hora")
        print("4: Comparar hora")
        opcion = int(input("Ingrese una opcion:"))
        switch(opcion)
        bandera = int(opcion) == 0
